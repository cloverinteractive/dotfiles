# Startup

# Auto numlock on startup
exec --no-startup-id xdotool key --clearmodifiers Num_Lock

# set keyboard layouts 
exec_always --no-startup-id setxkbmap -layout us,us -variant ,intl -option grp:alt_shift_toggle

# Start gsd-xsettings
exec_always --no-startup-id /usr/lib/gnome-settings-daemon/gsd-xsettings

# force primary screen
exec --no-startup-id xrandr --output eDP-1-1 --primary --mode 1920x1080 --auto

# start wifi applet
exec --no-startup-id nm-applet

# Generate dim locked background
exec --no-startup-id ~/.config/i3/scripts/betterlockscreen -w dim

# Autolocking after 10 minutes
exec --no-startup-id xset dpms 600
exec --no-startup-id xautolock -time 10 -locker "$HOME/.config/i3/scripts/betterlockscreen -l dim"

# exec_always --no-startup-id feh --bg-fill --zoom max ~/Pictures/Wallpapers/Sakura.jpg
exec_always --no-startup-id picom -bcfn --experimental-backends

bindsym $mod+d exec rofi -show run -lines 3 -width 80 -padding 20px -separator-style none -font "Fira Code 18" -bw 0

# Window gaps
gaps inner 10
gaps outer 0

# fix graphics glitch
new_window none
