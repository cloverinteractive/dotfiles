set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id ~/.config/i3/scripts/betterlockscreen -l dim, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id systemctl suspend, mode "default"
  bindsym h exec --no-startup-id systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym p exec --no-startup-id systemctl poweroff, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

set $mode_display HDMI (h) dual screen, USB-C vertical (u) triple screen, Shutoff Lid (l)
mode "$mode_display" {
  bindsym h exec --no-startup-id xrandr --output HDMI-0 --auto --left-of eDP-1-1, mode "default"
  bindsym u exec --no-startup-id xrandr --output USB-C-0 --pos 0x0 --rotate left --output HDMI-0 --right-of USB-C-0 --rotate normal --primary --auto, mode "default"
  bindsym l exec --no-startup-id xrandr --output eDP-1-1 --off, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+End mode "$mode_display"

# lock screen shortcut
bindsym $mod+shift+x exec ~/.config/i3/scripts/betterlockscreen -l dim

# disable window borders
for_window [class=".*"] border pixel 0

# hide adjacent borders
hide_edge_borders smart

